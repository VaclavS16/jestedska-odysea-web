---
import type { JoBand } from "../types/content";
import { toBandSlug } from "../utils/program";

interface Props {
  band: JoBand;
  activeBandSlug?: string;
}

const { band, activeBandSlug } = Astro.props;
const slug = toBandSlug(band);
const isActive = activeBandSlug === slug;
---

<a href={`/program/${slug}`} class={`jo-band-button ${isActive ? "jo-band-button--active" : "jo-band-button--hover"}`}>
    <div class="jo-band-name">
      {band.name}
        <span class={`jo-band-genre ${band.genreCentered ? "genre-centered" : ""}`}>{band.genre}</span>
    </div>
</a>
